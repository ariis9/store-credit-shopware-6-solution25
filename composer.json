{
    "name": "solution25/store-credit",
    "description": "Store Credit for Shopware 6",
    "type": "shopware-platform-plugin",
    "version": "1.0.3",
    "license": "MIT",
    "authors": [
      {
        "name": "solution 25",
        "role": "Manufacturer"
      }
    ],
    "require": {
        "shopware/core": "~6.6.0",
        "shopware/storefront": "~6.6.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1"
    },
    "extra": {
        "shopware-plugin-class": "StoreCredit\\StoreCredit",
        "label": {
            "de-DE": "Store Credit",
            "en-GB": "Store Credit"
        },
        "description": {
          "de-DE": "Verwalten Sie Guthaben f체r Retouren einfach. Admins weisen Kundenkonten Guthaben zu, das flexibel f체r zuk체nftige Eink채ufe genutzt werden kann, bis der Betrag aufgebraucht ist.",
          "en-GB": "Manage store credits for returns easily. Admins allocate credit to customer accounts, usable for future purchases until the balance is fully utilized. Alternative to refunds."
        },
        "manufacturerLink": {
          "de-DE": "https://solution25.com/",
          "en-GB": "https://solution25.com/en/home_en/"
        },
        "supportLink": {
          "de-DE": "https://solution25.com/",
          "en-GB": "https://solution25.com/en/home_en/"
        }
    },
    "autoload": {
        "psr-4": {
            "StoreCredit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StoreCredit\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@enable-prepush"
        ],
        "post-update-cmd": [
            "@enable-prepush"
        ],
        "enable-prepush": [
            "cp ./pre-push .git/hooks/pre-push",
            "chmod +x .git/hooks/pre-push"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
